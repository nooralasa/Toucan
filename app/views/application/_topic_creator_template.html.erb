
 <div class="panel panel-default  panel-main">
 </br>
<div class="panel-heading">
<div class="stepwizard">
    <div class="stepwizard-row setup-panel">
        <div class="stepwizard-step">
            <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
            <p>Topic</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
            <p>Sides</p>
        </div>
         <div class="stepwizard-step">
            <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
            <p>Backstory</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-4" type="button" class="btn btn-default btn-circle" disabled="disabled">4</a>
            <p>Restrictions</p>
        </div>
    </div>
</div>    
</div>
<div class = "panel-body">
    <div class="row setup-content" id="step-1">
        <div class="col-xs-12">
            <div class="col-md-12">
                 <div class = "topic-form">           
                <%= form_for(:topic, :url => {:controller=>'topics', :action => 'create'}, :role => "form") do |f| %>
                <div class="form-group">

                    <%= f.text_field(:topic_sentence, :class => "form-control", :placeholder => "Debate Topic")%>
                </div>
                <div class="form-group">
                    <%= f.text_area(:description, :class => "form-control", :placeholder => "Debate Description")%>
                </div> 
                 </div>
                <button class="btn btn-primary nextBtn btn-sm pull-right" type="button" >Next >></button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
            <div class="col-md-12">
                 <div class = "topic-form">    
                <div class="form-group">
                  
                    <%= f.text_field(:left_side_topic, :class => "form-control", :placeholder => "For")%>
                </div>
                <div class="form-group">
                    <%= f.text_field(:right_side_topic, :class => "form-control", :placeholder => "Against")%> 
                </div>
                 </div>
                <button class="btn btn-primary nextBtn btn-sm pull-right" type="button" >Next >> </button>
                <button class="btn btn-primary prevBtn btn-sm" type="button" ><< Previous</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
            <div class="col-md-12">
                <div class = "topic-form">    
                <!-- Content goes here -->
                </div>
                <button class="btn btn-primary nextBtn btn-sm pull-right" type="button" >Next >> </button>
                <button class="btn btn-primary prevBtn btn-sm" type="button"><< Previous</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-4">
        <div class="col-xs-12">
            <div class="col-md-12">
               <div class = "topic-form"> 
               <div class="form-group">
                <%= f.fields_for :debates do |o|%>
                    <%= o.text_field(:time_limit, :class => "form-control", :placeholder => "Time Limit" )%>
                </div>
                <div class="form-group">
                    <%= o.text_field(:back_and_forth_limit, :class => "form-control", :placeholder => "Back And Forth Limit")%>
                </div>
                <div class="form-group">
                    <%= o.text_field(:character_limit, :class => "form-control", :placeholder => "Character Limit")%>
                <% end %>
                </div>
                </div>
                <%= submit_tag("Submit", :class => "btn btn-success btn-sm pull-right") %>
                
                <button class="btn btn-primary prevBtn btn-sm " type = "button"><< Previous</button>
           <% end %>
            </div>
        </div>
    </div>

</div>
 <div class = "panel-footer">
                
            </div>
</div>
